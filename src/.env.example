# Server Configuration
HOST=0.0.0.0
PORT=8080
NODE_ENV=development

# Security
AUTH_TOKEN=your-secret-token-change-this
HEX_ENCRYPTION_KEY=your-32-character-hex-encryption-key
ALLOWED_ORIGINS=*

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/proxy
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pori-proxy
MONGO_MAX_POOL_SIZE=10
MONGO_SERVER_SELECTION_TIMEOUT=5000
MONGO_SOCKET_TIMEOUT=45000
MONGO_OPTIONS_STRING=retryWrites=true&w=majority

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://default:password@host:port
REDIS_DB=0
REDIS_MAX_RETRIES=3

# Proxy Configuration
PROXY_TIMEOUT=30000
MAX_REQUEST_SIZE=10mb
COMPRESSION_ENABLED=true
COMPRESSION_WINDOW_BITS=13
COMPRESSION_MEM_LEVEL=7

# Metrics Configuration
METRICS_ENABLED=true
METRICS_RETENTION_DAYS=7
METRICS_BATCH_SIZE=100

# WebSocket Configuration
WS_MAX_COMPRESSED_SIZE=65536
WS_MAX_BACKPRESSURE=65536
WS_PING_INTERVAL=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# Performance Configuration
MAX_CONCURRENT_REQUESTS=1000
REQUEST_RATE_LIMIT=100
DEVICE_CACHE_TTL=3600

# Security Headers & Rate Limiting
CORS_ORIGINS=*
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
MAX_CONNECTIONS=1000

# Development Configuration
DEBUG_MODE=false
MOCK_RESPONSES=false
SIMULATE_LATENCY=0
