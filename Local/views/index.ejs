<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tunnel Monitor Dashboard</title>
    <link rel="stylesheet" href="/static/css/vars.css">
    <link rel="stylesheet" href="/static/css/base.css">
    <link rel="stylesheet" href="/static/css/components.css">
    <link rel="stylesheet" href="/static/css/logs.css">
    <link rel="stylesheet" href="/static/css/extras.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="header-content">
                <h1 class="header-title">Tunnel Monitor</h1>
                <div class="header-status">
                    <div id="connection-status" class="status-indicator status-disconnected">
                        Disconnected
                    </div>
                </div>
            </div>
        </header>

        <!-- Stats Grid -->
        <div class="stats-grid">
            <div class="stat-card">
                <div class="stat-header">
                    <h3 class="stat-title">Total Requests</h3>
                    <div class="stat-icon">üìä</div>
                </div>
                <div class="stat-value" id="total-requests">0</div>
                <div class="stat-change">
                    <span class="stat-trend up">‚ÜóÔ∏è</span>
                    <span>All time</span>
                </div>
            </div>

            <div class="stat-card warning">
                <div class="stat-header">
                    <h3 class="stat-title">Active Connections</h3>
                    <div class="stat-icon">üîó</div>
                </div>
                <div class="stat-value" id="active-connections">0</div>
                <div class="stat-change">
                    <span>Live connections</span>
                </div>
            </div>

            <div class="stat-card error">
                <div class="stat-header">
                    <h3 class="stat-title">Errors</h3>
                    <div class="stat-icon">‚ùå</div>
                </div>
                <div class="stat-value" id="error-count">0</div>
                <div class="stat-change">
                    <span class="stat-trend down">‚ÜòÔ∏è</span>
                    <span>4xx + 5xx responses</span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <h3 class="stat-title">Success Rate</h3>
                    <div class="stat-icon">‚úÖ</div>
                </div>
                <div class="stat-value" id="success-count">0</div>
                <div class="stat-change">
                    <span class="stat-trend up">‚ÜóÔ∏è</span>
                    <span>2xx responses</span>
                </div>
            </div>

            <div class="stat-card">
                <div class="stat-header">
                    <h3 class="stat-title">Avg Response</h3>
                    <div class="stat-icon">‚ö°</div>
                </div>
                <div class="stat-value" id="avg-response-time">0ms</div>
                <div class="stat-change">
                    <span>Response time</span>
                </div>
            </div>
        </div>

        <!-- Control Panel -->
        <div class="control-panel">
            <div class="control-header">
                <h2 class="control-title">Controls</h2>
                <div class="control-actions">
                    <button id="clear-logs" class="btn btn-danger">
                        üóëÔ∏è Clear Logs
                    </button>
                    <button id="export-logs" class="btn">
                        üì• Export Logs
                    </button>
                    <button id="toggle-auto-scroll" class="btn active">
                        Auto Scroll: ON
                    </button>
                </div>
            </div>
        </div>

        <!-- Logs Container -->
        <div class="logs-container">
            <div class="logs-header">
                <h2 class="logs-title">Request Logs</h2>
                <div class="logs-filters">
                    <div class="logs-search">
                        <input 
                            type="text" 
                            id="logs-search" 
                            class="form-control" 
                            placeholder="Search logs..."
                        >
                    </div>
                </div>
            </div>

            <!-- Filter Chips -->
            <div class="log-filters">
                <div class="filter-chip active" data-filter="all">
                    All <span class="count">0</span>
                </div>
                <div class="filter-chip" data-filter="local">
                    Local <span class="count">0</span>
                </div>
                <div class="filter-chip" data-filter="proxy">
                    Proxy <span class="count">0</span>
                </div>
                <div class="filter-chip" data-filter="server">
                    Server <span class="count">0</span>
                </div>
                <div class="filter-chip" data-filter="error">
                    Errors <span class="count">0</span>
                </div>
                <div class="filter-chip" data-filter="warn">
                    Warnings <span class="count">0</span>
                </div>
            </div>

            <!-- Logs Content -->
            <div id="logs-content" class="logs-content">
                <div class="logs-empty">
                    <div class="logs-empty-icon">üì°</div>
                    <div class="logs-empty-title">No logs yet</div>
                    <div class="logs-empty-desc">Logs will appear here when requests are made through the tunnel</div>
                </div>
            </div>
        </div>
    </div>

    <script src="/static/js/utils.js"></script>
    <script src="/static/js/dashboard.js"></script>
</body>
</html>
