# Docker environment variables
# Copy this file to .env.docker and customize as needed

# Application Configuration
NODE_ENV=production
HOST=0.0.0.0
PORT=8080

# Authentication
AUTH_TOKEN=your-secure-auth-token-here
HEX_ENCRYPTION_KEY=your-32-character-hex-key-here

# MongoDB Configuration (for local development)
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=password

# MongoDB Express UI
MONGOEXPRESS_USERNAME=admin
MONGOEXPRESS_PASSWORD=pass

# Redis Configuration
REDIS_PORT=6379

# Application Settings
ALLOWED_ORIGINS=*
LOG_LEVEL=info
METRICS_ENABLED=true
DEBUG_MODE=false
