# Docker deployment environment variables
# Copy this to .env and customize as needed

# Application settings
NODE_ENV=production
PORT=8080
HOST=0.0.0.0
LOG_LEVEL=info
METRICS_ENABLED=true
COMPRESSION_ENABLED=true
FORCE_CONSOLE_OUTPUT=true

# Database connections
MONGODB_URI=mongodb://mongo:27017/proxy
REDIS_URL=redis://redis:6379

# Optional: External port mappings (uncomment if needed)
# EXTERNAL_HTTP_PORT=80
# EXTERNAL_HTTPS_PORT=443
# EXTERNAL_APP_PORT=8080
# EXTERNAL_MONGO_PORT=27017
# EXTERNAL_REDIS_PORT=6379

# Optional: Database authentication (uncomment if needed)
# MONGO_INITDB_ROOT_USERNAME=admin
# MONGO_INITDB_ROOT_PASSWORD=password
# REDIS_PASSWORD=password

# Optional: SSL/TLS configuration (uncomment if needed)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
